<div class="flex flex-row bg-slate-600 border-b-2 border-slate-500 px-2 py-1 fixed z-10 w-full shadow-md pb-1">
  <a class="mr-2 text-5xl p-1 font-mono drop-shadow-lg shadow-black" href="/">joar.a.developer</a>
  <span class="grow"></span>
  <div class="flex flex-row ">
    <a class="mr-2 text-2xl p-1 hover:bg-[#800020] rounded transition-all duration-500 mt-1 mb-1" href="/">Home</a>
    <a class="mr-2 text-2xl p-1 hover:bg-[#800020] rounded transition-all duration-500 mt-1 mb-1" href="/about/">About</a>
    <a class="mr-2 text-2xl p-1 hover:bg-[#800020] rounded transition-all duration-500 mt-1 mb-1 " href="/blog/">Blog</a>
    <button class="bg-red-500 rounded mr-4 p-1 mt-1 mb-1" id="myButton" onclick="location.href = '/term/'">term</button>
  </div>
</div>

<script>

  let button = document.querySelector('#myButton');
  button?.addEventListener('click', function() {
   let event = new CustomEvent('buttonClicked', 
      { 
        detail: { message: 'Button was clicked!' }, 
        bubbles: true,
        cancelable: true
      });
   window.dispatchEvent(event);
  });
</script>

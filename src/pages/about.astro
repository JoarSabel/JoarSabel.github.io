---
import BaseLayout from "../layouts/BaseLayout.astro";

const pageTitle = "About me, Joar";
const pageDesc = "So, Who am I, really? (This page is a bit of a work-in-progress)";
const htmlTitle = "whoami";

const identity: Record<string, any> = {
  firstName: "Joar",
  country: "Finland",
  occupation: "Student / Full-stack developer",
  hobbies: "Grand Strategy Games, History, Programming",
};

const skills: String[] = [
  "PHP",
  "Laravel",
  "HTML",
  "CSS",
  "Vue",
  "Typescript",
  "JavaScript",
  "Astro",
];

const finished: boolean = false;
const goal: number = 2;

const skillColor = "navy";
---

<html lang="en">
  <BaseLayout htmlTitle={htmlTitle} pageDescription={pageDesc} pageTitle={pageTitle} htmlDescription={pageDesc}>
    <h2>... and more stuff!</h2>

    <p>Who am I?</p>
    <ul>
      <li>
        My name is {identity.firstName}.
      </li>
      <li>
        I live in {identity.country} and I am a {identity.occupation}.
      </li>
      <li>
        My hobbies include: {identity.hobbies}
      </li>
    </ul>

    <p>Some of my skills are:</p>
    <ul>
      {skills.map((skill) => <li class="skill"> {skill} </li>)}
    </ul>

    {
      goal === 2 ? (
        <p> My goal is to finish this in 2 days </p>
      ) : (
        <p> My goal is not 2 days </p>
      )
    }
    {finished && <p> I am finished with this! </p>}
    <p>More stuff to come!</p>
  </BaseLayout>

  <style define:vars="{{skillColor}}">
    .skill {
      color: var(--skillColor);
      font-weight: bold;
    }
  </style>
</html>

---
import BaseLayout from "./BaseLayout.astro";
import Prose from "../components/Prose.astro";

const { frontmatter } = Astro.props;
---

<div class="bg-nord5 dark:bg-nord1 dark:text-white">
  <BaseLayout pageTitle={frontmatter.title}>
    <br>
    <article class="flex flex-col px-[6rem] text-left">
      <div class="flex flex-row mb-8">
        <div class="flex-1 w-1/3"></div>
        <div class="flex-3 flex flex-col left-0 w-2/3 text-left">
          <p class="text-nord11"><span class="underline">Written by:</span> {frontmatter.author}</p>
          <p class="text-nord12"><span class="underline">Published on:</span> {frontmatter.pubDate.toString().slice(0,16)}</p>
          <p class="text-nord14" class="italic"><span class="underline">Description:</span> {frontmatter.description}</p>
          <div class="flex flex-row flex-wrap mt-1">
            <p class="text-nord15 mt-2"><span class="underline">Tags:</span></p>
            {frontmatter.tags.map((tag: string) => (
                <p class="text-nord15 mx-2 my-1 p-0.5 border border-nord15 rounded hover:scale-110">
                  <a href={`/tags/${tag}`}>{tag}</a>
                </p>
              ))}
          </div>
        </div>
        <div class="flex-1 w-1/3"></div>
      </div>
      <Prose>
        <slot/>
      </Prose>
    </article>
  </BaseLayout>
</div>

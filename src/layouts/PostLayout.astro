---
import BaseLayout from "./BaseLayout.astro";
import Prose from "../components/Prose.astro";

const { frontmatter } = Astro.props;
---

<div class="bg-slate-600 text-white">
  <BaseLayout pageTitle={frontmatter.title}>
    <br>
    <div class="flex flex-col px-[6rem] text-left">
      <div class="flex flex-row mb-8">
        <div class="flex-1 w-1/3"></div>
        <div class="flex-3 flex flex-col left-0 w-1/3 text-left">
          <p>Written by: {frontmatter.author}</p>
          <p>Published on: {frontmatter.pubDate}</p>
          <p class="italic">{frontmatter.description}</p>
        </div>
        <div class="flex-1 w-1/3"></div>
      </div>
      <Prose>
        <slot/>
      </Prose>
    </div>
  </BaseLayout>
</div>
